{
  "name": "flatworld",
  "description": "Game engine for 2D turn-based strategy games in browsers",
  "keywords": [
    "2D game engine",
    "game-engine",
    "game engine",
    "HTML5 game engine",
    "turn-based strategy game",
    "turn-based",
    "multiplayer",
    "singleplayer",
    "cooperative",
    "strategy",
    "game",
    "webGL",
    "canvas",
    "HTML5"
  ],
  "version": "0.6.4",
  "main": "dist/flatworld.js",
  "author": "Janne Hyyti√§",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hachitus/FlaTWorld.git"
  },
  "bugs": {
    "url": "https://github.com/Hachitus/FlaTWorld/issues"
  },
  "homepage": "https://github.com/Hachitus/FlaTWorld",
  "scripts": {
    "start": "echo 'starting instance in http://localhost:9001/' && forever start startEngine.js",
    "stop": "forever stop startEngine.js",
    "build": "webpack",
    "watch": "webpack --progress --colors --watch",
    "deploy": "webpack --output-path=./dist",
    "nextVersion": "echo 'MANUAL: npm version patch/minor/major && git tag -a ?.?.? -m 'comment' && git push --tags && update CHANGELOG && update roadmap if needed'",
    "document": "yuidoc -t node_modules/yuidoc-theme-blue && gh-pages -d documentation",
    "showDocuments": "echo 'starting instance in http://localhost:9002/' && forever start startDocument.js --uid FlaTWorldDocument",
    "init": "npm i -g forever && ln -s /usr/bin/nodejs /usr/bin/node && npm install",
    "lint": "node_modules/.bin/eslint ."
  },
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.8.1",
    "eslint-loader": "^1.6.0",
    "express": "^4.12.4",
    "webpack": "^1.13.2",
    "yuidocjs": "^0.10.0"
  },
  "dependencies": {
    "babel-plugin-add-module-exports": "^0.2.1",
    "eventemitter3": "^2.0.2",
    "hammerjs": "^2.0.8",
    "hamsterjs": "^1.1.2",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.4.0",
    "howler": "^2.0.1",
    "javascript-state-machine": "^2.3.5",
    "loglevel": "^1.4.1",
    "pixi.js": "^4.2.1",
    "whatwg-fetch": "^2.0.0"
  }
}
